<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Refaccionaria_los_Mochis.Pages.Registrar.TomarFoto"
             Title="TomarFoto"
             BackgroundColor="#124734">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Button Text="Tomar Foto"
                Clicked="OnTomarFotoClicked"
                BackgroundColor="Gray"
                TextColor="White"
                BorderColor="#FCC208"
                BorderWidth="2"
                CornerRadius="5"
                Margin="0,0,0,30"/>

        <Image x:Name="FotoImage"
               Aspect="AspectFill"
               HeightRequest="600"
               WidthRequest="400"/>

        <Button
          x:Name="btnRegresar"
          Clicked="btnRegresar_Clicked"
          Text="Regresar "
          BackgroundColor="Gray"
          TextColor="White"
          BorderColor="#FCC208"
          BorderWidth="2"
          CornerRadius="5"
          Margin="0,0,0,30" />
    </VerticalStackLayout>
</ContentPage>